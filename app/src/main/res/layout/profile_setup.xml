<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#800020">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_bg_fast_food"
            android:alpha="0.8" />

        <!-- <include layout="@layout/toolbar"
            android:id="@+id/toolbar"/> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.alexzh.circleimageview.CircleImageView
                android:id="@+id/profilePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/default_profile"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                app:view_shadowRadius="2dp"
                app:view_shadowDx="2dp"
                app:view_shadowDy="0dp"
                app:view_borderWidth="2dp"
                app:view_borderColor="#cccccc"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <malcolmmaima.dishi.customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/name"
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:layout_marginTop="30dp"
                        android:padding="15dp"
                        />

                    <malcolmmaima.dishi.customfonts.EditText_Roboto_Regular
                        android:id="@+id/userName"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:background="#00000000"
                        android:layout_marginTop="30dp"
                        android:textColorHint="#fff"
                        android:paddingTop="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.001dp"
                    android:background="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <malcolmmaima.dishi.customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bio"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"/>
                    <malcolmmaima.dishi.customfonts.EditText_Roboto_Regular
                        android:id="@+id/userBio"
                        android:inputType="text"
                        android:layout_weight="1.3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:maxHeight="60dp"
                        android:textColorHint="#fff"
                        android:background="#00000000"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.001dp"
                    android:background="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <malcolmmaima.dishi.customfonts.MyTextView_Roboto_Medium
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:padding="20dp"/>
        <malcolmmaima.dishi.customfonts.EditText_Roboto_Regular
            android:id="@+id/emailAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="#00000000"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <malcolmmaima.dishi.customfonts.MyTextView_Roboto_Medium
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.5"
            android:padding="20dp"
            android:text="Gender"
            android:textSize="14dp" />


        <!-- Radio buttons under RelativeLayout -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                >

                <RadioButton
                    android:text="Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/maleRd"
                    android:checked="false"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorAccent"/>

                <RadioButton
                    android:text="Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/femaleRd"
                    android:checked="false"
                    android:backgroundTint="@color/colorAccent"
                    />

            </RadioGroup>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <malcolmmaima.dishi.customfonts.MyTextView_Roboto_Medium
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.5"
            android:padding="20dp"
            android:text="Account Type"
            android:textSize="14dp" />

            <Spinner
                android:entries="@array/accounts"
                android:prompt="@string/account_prompt"
                android:layout_width="200dp"
                android:id="@+id/accType"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <malcolmmaima.dishi.customfonts.MyTextView_Roboto_Medium
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Notifications &amp; Updates"
            android:textSize="14dp" />

        <com.rey.material.widget.Switch
            style="@style/MaterialSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:checked="true"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="13dp"
            android:elevation="0dp"
            android:switchPadding="16dp"
            android:id="@+id/Notifications"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:text="Go Back"
        android:textSize="20sp"
        android:backgroundTint="@color/transparent"
        android:shadowColor="#0000"
        />

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-50dp"
        android:text="Continue"
        android:textSize="20sp"
        android:backgroundTint="@color/transparent"
        android:shadowColor="#0000"/>

    <TextView
        android:id="@+id/changeNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f4"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="Change Number"
        android:textColor="#868686"
        android:textSize="16dp"
        />

    <malcolmmaima.dishi.customfonts.EditText_Roboto_Regular
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="phone"
        android:padding="16dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:hint="+254"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="invisible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ACACAC"/>

    <Button
        android:id="@+id/logoutbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Logout"
        android:textSize="20sp" />

</LinearLayout>

</ScrollView>

